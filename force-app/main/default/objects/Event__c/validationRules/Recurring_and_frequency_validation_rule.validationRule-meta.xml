    <fullName>Recurring_and_frequency_validation_rule</fullName>
    <active>true</active>
    <errorConditionFormula>( Recurring__c =true  &amp;&amp;  TEXT(Frequency__c ) = null)  || ( Recurring__c =false  &amp;&amp;  TEXT(Frequency__c) !=null)</errorConditionFormula>
